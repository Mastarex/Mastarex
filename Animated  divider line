  height: 1px;
  background: transparent;
  margin: 12px auto;
  display: block;
  overflow: hidden;
}

/* Animated line with gradient and glow */
.small-animated-divider::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  height: 100%;
  background: linear-gradient(90deg, #FF0000, #FF7F00, #FFFF00, #00FF00, #0000FF, #4B0082, #8B00FF, #FF0000);
background-size: 400% 100%;
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.5), 0 0 20px rgba(255, 0, 0, 0.3); /* Glow effect */
  animation: animateCoolDivider 10.5s infinite ease-in-out !important;
}

/* Keyframes for the cooler animation */
@keyframes animateCoolDivider {
  0% {
      width: 0;
      background-position: 0 0;
      transform: scaleY(1);
  }
  45% {
      width: 100%;
      background-position: 400% 0;
      transform: scaleY(1.5);
  }
  55% {
      width: 100%;
      background-position: 400% 0;
      transform: scaleY(1.5);
  }
  100% {
      width: 0;
      background-position: 0 0;
      transform: scaleY(1);
  }
}
@keyframes animateCoolDivider {
  0% {
      width: 0;
      background-position: 0 0;
      transform: scaleY(1);
      opacity: 0.5;
  }
  45% {
      width: 100%;
      background-position: 200% 0;
      transform: scaleY(1.5);
      opacity: 1;
  }
  55% {
      width: 100%;
      background-position: 200% 0;
      transform: scaleY(1.5);
      opacity: 1;
  }
  100% {
      width: 0;
      background-position: 0 0;
      transform: scaleY(1);
      opacity: 0.5;
  }
}
